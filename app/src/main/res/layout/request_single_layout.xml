<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_single_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/user2"
        />

    <TextView
        android:id="@+id/request_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/request_single_image"
        android:layout_toRightOf="@+id/request_single_image"
        android:padding="10dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        />

    <ImageButton
        android:id="@+id/request_single_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/request_single_done"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/request_single_done"
        android:layout_toStartOf="@+id/request_single_done"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_clear"
        />

    <View
        android:id="@+id/request_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/request_single_image"
        android:background="#bdbdbd"
        />

    <ImageButton
        android:id="@+id/request_single_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_done"
        />


</RelativeLayout>