<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/user2"
            />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profile_image"
            android:layout_alignEnd="@+id/profile_image"
            android:layout_alignRight="@+id/profile_image"
            android:layout_gravity="center"
            android:background="@drawable/gradient_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingStart="45dp"
            android:text="Username"
            android:textColor="@color/colorText1"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/profile_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/message_text_bg_c"
            android:minLines="2"
            android:padding="10dp"
            android:text="Status"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />


        <Button
            android:id="@+id/profile_declineReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile_sendReq"
            android:layout_alignLeft="@+id/profile_sendReq"
            android:layout_alignRight="@+id/profile_sendReq"
            android:layout_alignStart="@+id/profile_sendReq"
            android:layout_below="@+id/profile_sendReq"
            android:layout_marginBottom="20dp"
            android:text="Decline Friend Request"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/profile_sendReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile_status"
            android:layout_alignLeft="@+id/profile_status"
            android:layout_alignRight="@+id/profile_status"
            android:layout_alignStart="@+id/profile_status"
            android:layout_below="@+id/profile_status"
            android:text="Send Friend Request"
            android:textColor="@color/colorText1"
            />

    </RelativeLayout>

</ScrollView>
